@using (Html.BeginForm("LoginFailed", "Home", FormMethod.Post, new { @class = "form-inline loginForm", autocomplete = "off" }))
{
    <div class="form-group">
        <label>Logg inn</label>
        <input type="text" class="form-control" name="Username">
        <input type="text" class="form-control" name="Password">
        <button type="submit" class="btn btn-success">Logg inn</button>
    </div>
    <hr />
    <div class="alert alert-warning hidden" role="alert">
        <strong>Feil!</strong> Feil kombinasjon av brukernavn og password.
    </div>
}

<script>
    $(function () {
        $(".loginForm").submit(function (event) {
            event.preventDefault();

            $.ajax({
                type: "POST",
                url: "/Home/LoginAttempt",
                data: $(this).serialize(),
                dataType: "json"
            }).done(function (data) {
                if (data.exists == "True") {
                    window.location.href = data.url
                } else {
                    $(".loginForm .hidden").removeClass("hidden");
                }
            });

        });

    });

</script>