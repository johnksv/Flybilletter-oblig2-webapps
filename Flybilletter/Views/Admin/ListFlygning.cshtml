@model IEnumerable<Flybilletter.Model.DomeneModel.Flygning>

@{
    ViewBag.Title = "List Flygning";
    var jsSerializer = new System.Web.Script.Serialization.JavaScriptSerializer();
    string jsonFlygninger = jsSerializer.Serialize(Model);
}

<h2>List Flygning</h2>

<div class="pull-right">
    <p>
        @Html.ActionLink("Lag Flygning", "LagFlygning", new { }, new { @class = "btn btn-primary" })
    </p>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rute.Fra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rute.Til)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fly.Modell)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvgangsTid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnkomstTid)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Rute.Fra.ID) (@Html.DisplayFor(modelItem => item.Rute.Fra.Navn), @Html.DisplayFor(modelItem => item.Rute.Fra.By))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rute.Til.ID) (@Html.DisplayFor(modelItem => item.Rute.Til.Navn), @Html.DisplayFor(modelItem => item.Rute.Til.By))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fly.Modell)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AvgangsTid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnkomstTid)
        </td>
        <td>
            @Html.ActionLink("Endre", "EndreFlygning", new { id=item.ID }, new { @class = "btn btn-default" })

            @if (DateTime.Now < item.AvgangsTid && item.Kansellert == false)
            {
                @Html.ActionLink("Kanseller", "OppdaterStatusFlygning", new { id = item.ID }, new { @class = "kanseller btn btn-danger"})
            }
            else if (DateTime.Now < item.AvgangsTid && item.Kansellert == true)
            {
                @Html.ActionLink("Aktiver", "OppdaterStatusFlygning", new { id = item.ID }, new { @class = "slettKnapp btn btn-success" })
            }
            else
            {
                if(item.Kansellert == true)
                {
                    <a href="#" class="btn btn-default" title="Flyet har allerede hatt avgang, kan derfor ikke aktivere" data-toggle="tooltip">Aktiver</a>
                }
                else
                {
                    <a href="#" class="btn btn-default" title="Flyet har allerede hatt avgang, kan derfor ikke kansellere" data-toggle="tooltip">Kanseller</a>
                }
            }
        </td>
    </tr>
}

</table>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
