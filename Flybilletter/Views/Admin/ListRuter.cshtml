@model IEnumerable<Flybilletter.Model.DomeneModel.Rute>

@{
    ViewBag.Title = "Ruter";
}

<h2>Ruter</h2>

<p>
    @Html.ActionLink("Lag ny rute", "LagRute", new { }, new { @class = "btn btn-primary" })
</p>

<div id="ruter">
    <div class="input-group">
        <span class="input-group-btn">
            <button class="sortListe btn btn-sm btn-info" data-sort="fraID" style="margin-right: 0.5em;">
                Sorter etter fra flyplass
            </button>
        </span>
        <span class="input-group-btn">
            <button class="sortListe btn btn-sm btn-info" data-sort="tilID" style="margin-right: 0.5em;">
                Sorter etter til flyplass
            </button>
        </span>
        <span class="input-group-btn">
            <button class="sortListe btn btn-sm btn-info" data-sort="pris" style="margin-right: 0.5em;">
                Sorter etter pris
            </button>
        </span>
        <input class="sokListe form-control input-sm col-sm-3" placeholder="Søk" />
    </div>



    <table class="table">
        <thead>
            <tr>
                <th>
                    Fra flyplass
                </th>
                <th>
                    Til flyplass
                </th>
                <th>
                    Pris
                </th>
                <th></th>
            </tr>
        </thead>


        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fraID">
                        <div class="displayRute">@item.Fra.ID (@item.Fra.Navn) - @item.Fra.By, @item.Fra.Land</div>
                        @Html.EditorFor(modelItem => item.Fra.ID, new { htmlAttributes = new { @class = "hidden editRute", disabled = "" } })
                    </td>
                    <td class="tilID">
                        <div class="displayRute">@item.Til.Navn (@item.Til.ID) - @item.Til.By, @item.Til.Land</div>
                        @Html.EditorFor(modelItem => item.Til.ID, new { htmlAttributes = new { @class = "hidden editRute", disabled = "" } })
                    </td>
                    <td class="pris">
                        <div class="displayRute">@Html.DisplayFor(modelItem => item.BasePris)</div>
                        @Html.EditorFor(modelItem => item.BasePris, new { htmlAttributes = new { @class = "hidden editRute", disabled = "" } })
                    </td>
                    <td>
                        @Html.ActionLink("Endre", "EndreRute", new { id = item.ID }, new { @class = "endreKnapp btn btn-default" })
                        @Html.ActionLink("Lagre", "LagreRute", new { id = item.ID }, new { @class = "lagreKnapp btn btn-success hidden" })
                        @Html.ActionLink("Slett", "SlettRute", new { id = item.ID }, new { @class = "slettKnapp btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>

@Html.Partial("_SlettElementModal")

<script>
    $(function () {
        $(".endreKnapp").click(function (event) {
            event.preventDefault();

            $(this).parents("tr").find(".editRute").toggleClass("hidden").removeAttr("disabled");
            $(this).parents("tr").find(".displayRute").toggleClass("hidden");

            $(this).text("Avbryt");
            $(this).siblings(".lagreKnapp").toggleClass("hidden");


        });

        var options = {
            valueNames: ['fraID', 'tilID', 'pris'],
            searchClass: "sokListe",
            sortClass: "sortListe"
        };

        var userList = new List('ruter', options);
    });

</script>

