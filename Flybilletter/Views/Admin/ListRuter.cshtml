@model IEnumerable<Flybilletter.Model.DomeneModel.Rute>

@{
    ViewBag.Title = "Ruter";
}

<h2>Ruter</h2>

<p>
    @Html.ActionLink("Lag ny rute", "LagRute", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fra.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Til.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BasePris)
        </th>
        <th></th>
    </tr>

    @{
        int i = 0;
    }
    @foreach (var item in Model)
    {
        <tr class="row-@i">
            <td>
                @Html.DisplayFor(modelItem => item.Fra.ID)
                @Html.EditorFor(modelItem => item.Fra.ID, new { htmlAttributes = new {@class ="hidden" }  })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Til.ID)
                @Html.EditorFor(modelItem => item.Til.ID, new { htmlAttributes = new { @class = "hidden" } })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BasePris)
                @Html.EditorFor(modelItem => item.BasePris, new { htmlAttributes = new { @class = "hidden" } })
            </td>
            <td>
                @Html.ActionLink("Endre", "EndreRute", new { id = item.ID }, new { id = i, @class = "btn btn-default" })
                @Html.ActionLink("Slett", "SlettRute", new { id = item.ID }, new { @class = "slettKnapp btn btn-danger" })
            </td>
        </tr>
        i++;
    }

</table>

@Html.Partial("_SlettElementModal")
