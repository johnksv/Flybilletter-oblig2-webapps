@model IEnumerable<Flybilletter.Model.DomeneModel.Fly>

@{
    ViewBag.Title = "Administrer fly";
}

<h2>Fly</h2>

<p>
    @Html.ActionLink("Legg til nytt fly", "LagFly", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Modell)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AntallSeter)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Modell)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AntallSeter)
        </td>
        <td>
            @Html.ActionLink("Endre", "RedigerFly", new { id=item.ID }, new { @class = "btn btn-default" })
            @Html.ActionLink("Slett", "SlettFly", new { id=item.ID }, new { @class = "kanseller btn btn-danger slettKnapp" })
        </td>
    </tr>
}

</table>

@if (Model.Count() >= 8)
{
    <p>
        @Html.ActionLink("Legg til nytt fly", "LagFly", new { }, new { @class = "btn btn-primary" })
    </p>
}


@Html.Partial("_SlettElementModal")

<script>
    $(function () {
        $(".kanseller").click(function (event) {
            event.preventDefault();
            var that = $(this);
            $.ajax({
                type: "POST",
                url: that.attr("href")
            }).done(function (response) {
                if (response == "True") {
                    that.parents("tr").remove();
                } else {
                    alert("En feil oppsto. Kan ikke slette");
                }
            });

        });


    });
</script>