@model Flybilletter.Model.DomeneModel.Flygning

@{
    ViewBag.Title = "Rediger Flygning";
}

<h2>Rediger Flygning</h2>

@using (Html.BeginForm("OppdaterFlygning", "Admin", FormMethod.Post, new { autocomplete = "false" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Flygning</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.AvgangsTid, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AvgangsTid, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AvgangsTid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AnkomstTid, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AnkomstTid, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AnkomstTid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Tilbake til listen", "Flygninger", new { }, new { @class = "btn btn-primary" })
</div>
