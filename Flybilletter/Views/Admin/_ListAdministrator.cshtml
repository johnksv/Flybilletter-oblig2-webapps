@model IEnumerable<Flybilletter.Model.DomeneModel.Admin>

@{
    ViewBag.Title = "_ListAdministrator";
}

<h4>Registrerte administratorer:</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
            <input class="editModel hidden input-xs text-box single-line" data-val="true" name="Username" type="hidden" value="@item.Username">
        </td>
        <td><!--Passord td-->
            <input class="editModel hidden input-xs text-box single-line" data-val="true" name="Gammelt" placeholder="Gammelt passord">
            <input class="editModel hidden input-xs text-box single-line" data-val="true" name="Nytt" placeholder="Nytt passord">
            <input class="editModel hidden input-xs text-box single-line" data-val="true" name="NyttBekreft" placeholder="Bekreft nytt passord">
        </td>
        <td>
            @Html.ActionLink("Endre passord", "EndrePassord", new { id = item.Username }, new { @class = "endre btn btn-default", data_status = "endre" })
            @Html.ActionLink("Lagre", "LagrePassord", new { id = item.Username }, new { @class = "lagre btn btn-default disabled" })
            @Html.ActionLink("Slett administrator", "SlettAdmin", new { id = item.Username }, new { @class = "slett btn btn-danger slettKnapp" })
        </td>
    </tr>
}

</table>

<script>
    $(function () {
        $(".endreKnapp").click(function (event) {
            event.preventDefault();

            //Vis input.bokser
            $(this).parents("tr").find(".editModel").toggleClass("hidden");
            //Aktiver knapp
            $(this).siblings(".lagreKnapp").toggleClass("disabled").toggleClass("btn-success").toggleClass("btn-default");

            if ($(this).data("status") === "endre") {
                $(this).text("Avbryt");
                $(this).data("status", "avbryt");
            } else {
                $(this).text("Endre");
                $(this).data("status", "endre");
            }
        });

        $(".lagreKnapp").click(function (event) {
            event.preventDefault();

            var formData = $(this).parents("tr").find(".editModel").serialize();

            $.ajax({
                url: "/Admin/EndreAdmin",
                method: "POST",
                data: formData,
            }).done(function (response) {
                if (response === "true") {
                    location.reload();
                } else {
                    alert(response);
                }
            });

        });
    });
</script>
